        <link rel="shortcut icon" href="images/favicon.ico">
        <link href="css/tailwind.css" rel="stylesheet" type="text/css" />
        <link href="css/icons.css" rel="stylesheet" type="text/css" />
    </head>


    <body>
        <!-- Navbar Start -->
        <div class="navbar-custom is-sticky" id="navbar">
            <nav>
                <div class="lg:container flex flex-wrap items-center">

                    <!-- Main Logo -->
                    <a href="/" class="flex lg:ml-0 ml-8">
                        <span class="self-center text-xl font-poppins font-bold tracking-widest whitespace-nowrap uppercase text-white">
                            AVIOR
                        </span>
                    </a>
                    <div class="flex items-center lg:order-2 ml-auto lg:mr-0 mr-8  ">
                        <!-- Navbar Button -->
                        <button id="btn-connect" class="btn bg-yellow-500 text-white rounded-full translate-y-0">
                            <i class="mdi mdi-wallet m-auto"></i> Connect
                        </button>
                        <button id="btn-disconnect" class="btn bg-red-500 text-white rounded-full translate-y-0 hidden">
                            Disconnect
                        </button>
                    </div>

                </div>
            </nav>
        </div>
        <!-- Navbar End -->


        <section id="exchange" class="mt-5">
            <div class="container">
                <div class="flex justify-center">
                    <div class="lg:w-2/3 space-y-5 text-center">
                        <!-- Section Title -->
                        <h1 class="text-2xl uppercase tracking-widest">Get Avior</h1>
                        <div class="h-0.5 bg-yellow-500 w-14 mx-auto"></div>
                    </div>
                </div>

                <div class="grid grid-cols-1 lg:grid-cols-1 gap-6 mt-8">

                    <div class="card transform text-center transition ease-in-out duration-300 hover:-translate-y-6 mb-6">
                        <div class="card-body">
                            <div class="space-y-2">
                                <h4 class="text-gray-400">1 Avior = <label id="lbl-usdt-price"></label> USDT</h4>
                                <h1 class="text-sm">How many aviors do you need?</h1>
                                <label for=""></label>
                                <input type="number" id="txt-avior-amount" step="1" class="border border-gray-300 text-gray-900 text-sm rounded focus:ring-0 focus:border-gray-400 block w-full p-3" placeholder="">

                                <p>You Need: <span class="text-green-500 font-medium" id="lbl-usdt-need">0.00000</span> USDT (BEP20)</p>
                                <h1 class="uppercase text-gray-400 text-xs">Need 1 x 24 hours verification</h1>

                            </div>
                            <a href="javascript:;" id="btn-submit" class="btn bg-purple-500 text-white mt-10 hidden">Submit</a>
                            <br>
                            <br>
                            <h4 id="lbl-result" class="text-red-500"></h4>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- Contact Start -->
        <section id="contact" class="bg-gray-100">
        </section>
        <!-- Contact End -->


        <!-- Contact us Start -->
        <section class="py-6 bg-gray-100">
        </section>
        <!-- Contact us Start -->


        <footer class="bg-gray-800 py-5">
            <div class="container">
                <div class="grid grid-cols-1 lg:grid-cols-3 items-center gap-6">
                    <div class="col-span-full">
                        <div class="text-sm text-gray-400">
                            <script>document.write(new Date().getFullYear()) </script>&copy; Avior
                            <a href="mailto:support@aviortoken.com" class="float-right"><i class="pe-7s-mail align-middle"></i> support@aviortoken.com</a>
                        </div>
                    </div>

                </div>
            </div>
        </footer>
        <!-- Footer Start -->

        <!-- Smooth-Scroll Javascript -->
        <script src="js/smooth-scroll.polyfills.min.js"></script>

        <script src="js/gumshoe.polyfills.min.js"></script>


        <!-- Custom Javascript -->
        <script src="js/app.js"></script>
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
        <script src="https://unpkg.com/moralis/dist/moralis.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/@walletconnect/web3-provider@1.7.5/dist/umd/index.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/web3@1.7.1/dist/web3.min.js"></script>

        <script src="js/index.js"></script>

